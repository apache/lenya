<?xml version="1.0"?>

<!-- CVS: $Id: sitemap.xmap,v 1.19 2003/12/18 15:02:04 edith Exp $ -->

<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">

  <map:components>
    <map:generators default="file"/>
    <map:transformers default="xslt"/>
    <map:readers default="resource"/>
    <map:serializers default="html"/>
    <map:matchers default="wildcard"/>
    <map:actions/>
  </map:components>

  <map:views/>

  <map:pipelines>

    <map:pipeline>

      <map:match pattern="passwd/*.iml">
	<map:generate src="config/ac/passwd/{1}.iml"/>
	<map:serialize type="xml"/>
      </map:match>
      
      <map:match pattern="policies/**">
	<map:mount uri-prefix="policies" src="policies-sitemap.xmap" check-reload="true" reload-method="synchron"/>
      </map:match>
      
      <map:match pattern="**">
          <!--  ####################################################################### -->
          <!--          Everything below is "protected" by policies-sitemap.xmap        -->
          <!--  ####################################################################### -->

          <!-- Authoring Interface -->
          <map:match pattern="authoring/**">
            <map:mount uri-prefix="authoring" src="authoring-sitemap.xmap"/>
          </map:match>
          
          <!-- JavaDocs -->
          <map:match pattern="apidocs/**.html">
            <map:act type="resource-exists" src="resources/html/apidocs/{1}.html">
              <map:read src="resources/html/apidocs/{../1}.html" mime-type="text/html"/>
            </map:act>
            <map:redirect-to uri="../docs/misc/javadoc-error.html"/>
          </map:match>

          <map:match pattern="**">
            <map:mount uri-prefix="" src="forrest-sitemap.xmap"/>
          </map:match>
      </map:match>

      <map:handle-errors type="500">
        <map:serialize type="xml"/>
      </map:handle-errors>
    </map:pipeline>

  </map:pipelines>
</map:sitemap>
