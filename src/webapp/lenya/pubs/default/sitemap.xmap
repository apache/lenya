<?xml version="1.0"?>

<!-- CVS: $Id: sitemap.xmap,v 1.15 2003/07/17 16:26:50 andreas Exp $ -->

<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">

  <map:components>
    <map:generators default="file"/>
    <map:transformers default="xslt"/>
    <map:readers default="resource"/>
    <map:serializers default="html"/>
    <map:matchers default="wildcard"/>
    <map:actions/>
  </map:components>

  <map:views/>

  <map:resources>
    
    <map:resource name="style-cms-page">
      <map:transform src="../../xslt/util/page2xhtml.xsl">
        <map:parameter name="contextprefix" value="{request:contextPath}"/>
      </map:transform>
      <map:serialize/>
    </map:resource>
    
  </map:resources>


  <map:pipelines>

    <map:pipeline>

      <!-- FIXME: Factor out to root sitemap -->
      <map:match pattern="passwd/*.iml">
	<map:generate src="config/ac/passwd/{1}.iml"/>
	<map:serialize type="xml"/>
      </map:match>
      <!-- FIXME: Factor out to root sitemap -->
      <map:match pattern="policies/**">
	<map:mount uri-prefix="policies" src="policies-sitemap.xmap" check-reload="true" reload-method="synchron"/>
      </map:match>

      <map:match pattern="**">

          <!--  ####################################################################### -->
          <!--          Everything below is "protected" by policies-sitemap.xmap        -->
          <!--  ####################################################################### -->

        <!-- Xopus Interface -->
           <map:match pattern="xopus/**">
               <map:mount uri-prefix="xopus" src="xopus.xmap"/>
           </map:match>

      <!-- Bitflux Interface -->
      <map:match pattern="bitflux/**">
	<map:mount uri-prefix="bitflux" src="bitflux.xmap"/>
      </map:match>

          <map:match pattern="**">
            <map:mount uri-prefix="" src="publication-sitemap.xmap"/>
          </map:match>

      </map:match>

      <map:handle-errors type="500">
        <map:serialize type="xml"/>
      </map:handle-errors>
    </map:pipeline>

  </map:pipelines>
</map:sitemap>
