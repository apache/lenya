<?xml version="1.0"?>

<!-- CVS: $Id: doctypes.xmap,v 1.12 2003/11/04 10:23:12 andreas Exp $ -->

<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">

  <map:components>
    <map:generators default="file" />
    <map:matchers default="wildcard"/>
    <map:actions/>
  </map:components>

  <map:views>
  </map:views>

  <map:resources/>

  <map:pipelines>

    <map:pipeline>
      <map:match pattern="*/*/**.xml">
        <map:match type="step" pattern="view-revision">
          <map:generate type="serverpages" src="../../content/rc/view.xsp">
          </map:generate>
          <map:transform src="xslt/toDoc.xsl"/>
          <map:transform src="xslt/{../2}2xhtml.xsl"/>
          <map:serialize type="xml"/>
        </map:match>
      </map:match>

      <!-- parametrized doctype matcher -->
      <!-- pattern="{area}/{doctype}/{document-path}" -->
      <map:match pattern="*/*/*/**.xml">
        <map:generate src="content/{2}/{4}.xml"/>
        <map:transform src="xslt/{3}2xhtml.xsl">
          <map:parameter name="rendertype" value="{1}"/>
        </map:transform>
        <map:serialize type="xml"/>
      </map:match>

    </map:pipeline>
    
  </map:pipelines>
</map:sitemap>
