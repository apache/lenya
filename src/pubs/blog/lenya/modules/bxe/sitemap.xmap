<!-- $Id: sitemap.xmap 473861 2006-11-12 03:51:14Z gregor $ -->

<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">
  
  <map:pipelines>
    
    <!-- BX Editor: Entries -->
    
    <map:pipeline>
      <!--
        <map:match type="step" pattern="config">
      -->
      <map:match pattern="*/*/entries/*/*/*/*/index.html">
        <map:generate src="fallback://lenya/modules/bxe/resources/misc/inc/config.xml"/>
        <map:transform src="fallback://lenya/modules/bxe/xslt/config-xml.xsl">
          <map:parameter name="BX_xmlfile" value="index.webdav.xml"/>
          <map:parameter name="BX_xslfile" value="entry-bxe.xsl?lenya.module=bxe"/>
          <map:parameter name="css" value="entry-bxe.css?lenya.module=bxe"/>
          <map:parameter name="BX_exitdestination" value="index.html"/>
          <map:parameter name="BX_validationfile" value="entry-relaxng-bxe.xml?lenya.module=bxe"/>
        </map:transform>
        <map:serialize type="xml"/>
      </map:match>
      <!--
        </map:match>
      -->
    </map:pipeline>
    
    <map:pipeline>
      
      <map:match pattern="*/*/entries/*/*/*/*/entry-bxe.xsl">
        <map:generate src="fallback://lenya/pubs/blog/xslt/entry/bxe.xsl"/>
        <map:serialize type="xml"/>
      </map:match>
      
      <map:match pattern="*/*/entries/*/*/*/*/entry-bxe.css">
        <map:read src="fallback://lenya/pubs/blog/resources/misc/bxe/entry.css" mime-type="text/css"/>
      </map:match>
      
      <map:match pattern="*/*/entries/*/*/*/*/entry-relaxng-bxe.xml">
        <map:generate src="fallback://lenya/modules/blog/resources/schemas/entry.rng"/>
        <map:serialize type="xml"/>
      </map:match>
      
    </map:pipeline>
    <!-- /BX Editor: Entries -->
    
    <map:pipeline>
      <map:mount uri-prefix="" src="template-fallback://lenya/modules/bxe/sitemap.xmap"/>
    </map:pipeline>
    
  </map:pipelines>
</map:sitemap>
