<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">

  <map:pipelines>

    <map:pipeline>
      
      <!--
      Returns the content of the current document.
      A revision number can be specified using the lenya.revision request parameter.
      -->
      <map:match pattern="current-document.xml">
        <map:select type="parameter">
          <map:parameter name="parameter-selector-test" value="{request-param:lenya.revision}"/>
          <map:when test="">
            <map:generate src="lenya-document:{page-envelope:document-uuid},lang={page-envelope:document-language}"/>
          </map:when>
          <map:otherwise>
            <map:generate src="lenya-document:{page-envelope:document-uuid},lang={page-envelope:document-language},rev={request-param:lenya.revision}"/>
          </map:otherwise>
        </map:select>
        <map:serialize type="xml"/>
      </map:match>
      
    </map:pipeline>
    
  </map:pipelines>
</map:sitemap>
